<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/toolbar_background_color</item>
    </style>

    <!-- Button style -->
    <style name="ButtonPrimaryStyle">
        <item name="android:background">@drawable/button_primary_background_selector</item>
        <item name="android:textColor">@color/button_primary_text_color</item>
    </style>

</resources>
